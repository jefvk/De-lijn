    <input type="time" name="user[tijd]">
    <input type="text" name="user[van]">
    <input type="text" name="user[naar]">
    <input type="submit" value="Submit">
</form>
<div class="streeproze een"></div>
<div class="streeproze twee"></div>
<div class="streeproze drie"></div>
