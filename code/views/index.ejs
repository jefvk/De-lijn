<div class="streeproze negen"></div>
<div class="streeproze tien"></div>
<div class="streepblauw een"></div>
<div class="streepblauw twee"></div>
<div class="streepblauw drie"></div>
<div class="streepblauw vier"></div>
<div class="streepblauw vijf"></div>
<div class="streepblauw zes"></div>
<div class="streepblauw zeven"></div>
<div class="streepblauw acht"></div>
<div class="streepblauw negen"></div>
<div class="streepblauw tien"></div>
<nav>
  <% for (var i = 0; i < categorieen.length; i++) { %>
    <a href="/categorieen/<%- i %>"><%- categorieen[i] %></a>
  <% } %>
</nav>

<div class="news">
  <% var teller = 1; %>
  <% nieuws.forEach(function(item){ %>
    <section>
        <h2>
        <%- item.titel %>
        </h2>
        <img src="/img/<%- item.afbeeldings %>" alt="<%- item.titel %>">
        <p class="naam"><%- item.naam %></p>

        <p class="samenvatting">
          <%- item.samenvatting %>
        </p>
    </section>
    <% teller++;}); %>
</div>

<% include footer %>
